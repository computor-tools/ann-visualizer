{
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended"
  ],
  "plugins": ["prettier"],
  "settings": {
    "react": {
      "version": "latest"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx"]
       }
    }
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "es2021": true,
    "browser": true
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "func-style": ["error", "expression"]
  },
  "ignorePatterns": ["dist"]
}
